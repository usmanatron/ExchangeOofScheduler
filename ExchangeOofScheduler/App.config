<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="OutOfOfficeSettings" requirePermission="false" type="System.Configuration.NameValueSectionHandler" />
  </configSections>

  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <OutOfOfficeSettings>
    <add key="userEmail" value="usman.iqbal@softwire.com" />
    <!-- startDay and endDay defines the range of days for which the OOF should be set.  If only one day is required,
         both values should be the same.
         The codes are the first two letters of the given weekday (weekends are not supported). e.g. Mo-->
    <add key="startDay" value="Fr" />
    <add key="endDay" value="Fr" />
    <add key="internalReply" value="I don't work Fridays - back on Monday" />
    <!-- Three choices:
         * None  - Don't send external replies
         * Known - Send only to known external recipients
         * All   - Send to all external recipients (known or unknown) 
         -->
    <add key="sendToExternalRecipients" value="All" />
    <add key="externalReply" value="Thankyou for your Email. I'm currently away, but will be back in the office on Monday. Regards,Usman" />
    
    <add key="debugModeEnabled" value="True" />
    
    
  </OutOfOfficeSettings>
</configuration>